<!DOCTYPE html>
<html>
  <head>
    <title>MusicApp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <header>
      <% if logged_in? %>
        <%= current_user.email %>
        <%= button_to "Logout", session_url, method: :delete %>
      <% end %>
    </header>
    <%= yield %>
  </body>
</html>
